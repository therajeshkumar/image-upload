
<form action="/customers"enctype="multipart/form-data" method="POST" style="width: 450px;margin:auto">

<label for="name">Name</label>
<input type="text" name="name" id="name" class="form-control">

{{!-- <label for="images">Select photo </label> --}}
 <input type="file" name="photo" class="form-control" id="photo">
         

<button type="submit" class="btn btn-default">Submit</button>
</form>

<div class="container" style="margin-top: 2em;">


 {{# each customer }}

    <a href="https://teammarkup.herokuapp.com/uploads/{{photo}}" target="_blank">
     <img src="uploads/{{photo}}" style="width:100px;height:50px;margin:0px">
    </a>
 {{/each}}

</div>
